<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        android:orientation="vertical"
        android:outlineProvider="none"
        android:padding="@dimen/inside_margin"
        tools:context=".LoginFragment">

        <TextView
            android:id="@+id/emailLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/side_margins"
            android:layout_marginTop="@dimen/side_margins"
            android:layout_marginEnd="@dimen/side_margins"
            android:fontFamily="cursive"
            android:text="@string/email"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/editTextEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/side_margins"
            android:layout_marginEnd="@dimen/side_margins"
            android:layout_marginBottom="@dimen/inside_margin"
            android:backgroundTint="@color/text_tint"
            android:cursorVisible="true"
            android:ems="10"
            android:hint="user@youremail.com"
            android:inputType="textEmailAddress"
            android:textColorHint="@color/hint_color" />

        <TextView
            android:id="@+id/passwordLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/side_margins"
            android:layout_marginTop="@dimen/inside_margin"
            android:layout_marginEnd="@dimen/side_margins"
            android:fontFamily="cursive"
            android:text="@string/password"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/editTextTextPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/side_margins"
            android:layout_marginEnd="@dimen/side_margins"
            android:layout_marginBottom="@dimen/inside_margin"
            android:backgroundTint="@color/text_tint"
            android:ems="10"
            android:hint="password"
            android:inputType="textPassword"
            android:singleLine="false"
            android:textColorHint="@color/hint_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/inside_margin"
            android:layout_marginBottom="@dimen/inside_margin"
            android:orientation="horizontal">

            <Button
                android:id="@+id/loginButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/side_margins"
                android:layout_marginTop="@dimen/inside_margin"
                android:layout_marginEnd="@dimen/inside_margin"
                android:layout_weight="1"
                android:fontFamily="cursive"
                android:text="@string/log_in"
                android:textColor="@color/font_color"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/createButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/inside_margin"
                android:layout_marginTop="@dimen/inside_margin"
                android:layout_marginEnd="@dimen/side_margins"
                android:layout_weight="1"
                android:fontFamily="cursive"
                android:text="@string/create_new_login"
                android:textColor="@color/font_color"
                android:textSize="24sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>
</layout>