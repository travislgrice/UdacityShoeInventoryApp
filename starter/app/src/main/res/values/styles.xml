<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="layout_style">
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/background</item>
        <item name="android:padding">@dimen/side_margins</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="TextViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/side_margins</item>
        <item name="android:layout_marginTop">@dimen/side_margins</item>
        <item name="android:layout_marginEnd">@dimen/side_margins</item>
        <item name="android:fontFamily">cursive</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/font_color</item>

    </style>

    <style name="EditTextStyle" parent="TextViewStyle">
        <item name="android:padding">@dimen/side_margins</item>
        <item name="android:layout_marginBottom">@dimen/inside_margin</item>
        <item name="android:backgroundTint">@color/text_tint</item>
        <item name="android:cursorVisible">true</item>
        <item name="android:ems">10</item>
        <item name="android:inputType">textEmailAddress</item>
        <item name="android:textColorHint">@color/hint_color</item>
    </style>

    <style name="horizontal_layout_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/inside_margin</item>
        <item name="android:layout_marginBottom">@dimen/inside_margin</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/side_margins</item>
        <item name="android:layout_marginTop">@dimen/inside_margin</item>
        <item name="android:layout_marginEnd">@dimen/inside_margin</item>
        <item name="android:fontFamily">cursive</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
